#!/usr/bin/env ruby

eval File.read(File.expand_path("../ninja.rb", __FILE__))

conf = Ninja::Config.new do |c|
  c.base_path = Dir.getwd
  c.src_glob = "src/**/*.vala"
  c.out_path = "_obj"
  c.vala_package_names = %w[gtk+-3.0 gee-1.0]
  c.valac_flags = %w[] # %w[-g]
  c.cc_flags = %w[-O3] # %w[-O3 -g]
  c.binary_name = "bamboo"
end

Ninja::Build.new(conf).configure!($stdout)
